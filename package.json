{
  "name": "deduce",
  "version": "2.0.0-0",
  "description": "Ridiculously easy JavaScript state containers with reducer methods.",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c",
    "lint": "run-s lint-*",
    "lint-prettier": "prettier --ignore-path .gitignore --write \"**/*.js\"",
    "lint-eslint": "eslint --ignore-path .gitignore --fix \"**/*.js\"",
    "test": "nyc -r none run-s test-* && nyc report -r lcov -r text",
    "test-node": "NODE_ENV=test rollup test/node.js -c | node | tap-diff",
    "test-browser": "NODE_ENV=test rollup test/browser.js -c | run-headless | tap-diff",
    "report": "nyc report -r text-lcov | coveralls",
    "pretest": "run-s lint",
    "precommit": "run-s test build && git add .",
    "prepublishOnly": "git diff-index --quiet HEAD"
  },
  "keywords": [
    "state",
    "container",
    "reduce",
    "redux",
    "flux",
    "actions"
  ],
  "author": "Shannon Moeller <me@shannonmoeller> (http://shannonmoeller.com)",
  "repository": "shannonmoeller/deduce",
  "license": "MIT",
  "main": "dist/deduce.cjs.js",
  "module": "dist/deduce.es.js",
  "files": [
    "dist",
    "*.md"
  ],
  "dependencies": {},
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-whim": "^3.1.0-9",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "rollup": "^0.55.5",
    "rollup-config-whim": "^1.0.0-10",
    "run-headless": "^2.0.1",
    "tap-diff": "^0.1.1"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-whim",
      "eslint-config-prettier"
    ]
  },
  "nyc": {
    "include": [
      "src/**"
    ]
  },
  "engines": {
    "node": ">= 6",
    "npm": ">= 3"
  }
}
